@model PatientManagementSoftware.Models.BillingViewModel
@{
    ViewBag.Title = "Billing";
    ViewBag.Page = "Invoicing";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">


    <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 mb-0 z-index-2">
            <div class="bg-gradient-primary shadow-primary border-radius-lg pt-3 pb-2">
                <h5 class="text-white text-capitalize ps-3"><b>Create Invoice</b></h5>
            </div>
        </div>
        <div class="card-body mx-3 pt-3 p-2">

            @using (Html.BeginForm("CreateInvoice", "Invoicing", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row mb-3">
                    <div class="col-lg-6 col-sm-12 ">
                        <div class="input-group input-group-outline is-filled">
                            @Html.LabelFor(model => model.PatientName, new { @class = "form-label" })
                            @Html.DropDownListFor(model => model.PatientID, new SelectList(ViewBag.PatientList, "PatientID", "Name"), "--Select Patient--", new { @class = "form-control", type = "text" })
                            @Html.ValidationMessageFor(m => m.PatientID, "", new { @class = "form-text text-muted" })
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12 ">
                        <div class="input-group input-group-outline is-filled">
                            @Html.LabelFor(model => model.BillDate, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.BillDate, new { @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(m => m.BillDate, "", new { @class = "form-text text-muted" })
                        </div>
                    </div>
                </div>

                <div class="row mb-3">

                    <div class="col-lg-6 col-sm-12 ">
                        <div class="input-group input-group-outline">
                            @Html.LabelFor(model => model.Amount, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", type = "text" })
                            @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "form-text text-muted" })
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12 ">

                        <div class="input-group input-group-outline is-filled">
                            @Html.LabelFor(model => model.PaymentStatus, new { @class = "form-label" })
                            @Html.DropDownListFor(model => model.PaymentStatus, new SelectList(
                         new List<SelectListItem> { new SelectListItem { Value = "Paid", Text = "Paid" }, new SelectListItem { Value = "UnPaid", Text = "Unpaid" } }, "Value", "Text"
                         ), "--Select Payment Status--", new { @class = "form-control", type = "text", required = "required" })
                            @Html.ValidationMessageFor(m => m.PaymentStatus, "", new { @class = "form-text text-muted" })
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-sm bg-gradient-primary btn-lg mt-3 mb-0">Submit</button>
                    </div>


                </div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 mb-0 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-3 pb-2">
                        <h5 class="text-white text-capitalize ps-3"><b>Invoices</b></h5>
                    </div>
                </div>
                <div class="card-body px-3 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0 p-2">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Bill ID</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Patient Id</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Patient Name</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">BillDate</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Amount</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Payment Status</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var billing in ViewBag.list)
                                {
                                    <tr id="row_@billing.BillID">
                                        <td class="text-start text-secondary text-xs font-weight-bolder px-4 py-3">@billing.BillID</td>
                                        <td class="text-start text-secondary text-xs font-weight-bolder px-4 py-3">@billing.PatientID</td>
                                        <td class="text-start text-secondary text-xs font-weight-bolder px-4 py-3">@billing.PatientName</td>
                                        <td class="text-start text-secondary text-xs font-weight-bolder px-4 py-3">@billing.BillDate</td>
                                        <td class="text-start text-secondary text-xs font-weight-bolder px-4 py-3">@billing.Amount</td>
                                        <td class="text-start text-secondary text-xs font-weight-bolder px-4 py-3">@billing.PaymentStatus</td>
                                        <td class="text-start mb-0">
                                            <a href="@Url.Action("Edit", "Invoicing", new { id = billing.BillID })" class="text-secondary font-weight-bold text-xs mx-2">Edit</a>
                                            <a href="#" class="text-secondary font-weight-bold text-xs mx-2" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="openModal(@billing.BillID)">Delete</a>
                                            <a href="@Url.Action("PrintInvoice", "Invoicing", new { billId = billing.BillID })" target="_blank" class="text-secondary font-weight-bold text-xs mx-2">Print</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title font-weight-normal" id="exampleModalLabel">Warning !!!!!!!</h5>
                    <button type="button" class="btn-close text-dark" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete the Invoice Details ?...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
                    <button onclick="deleteInvoice()" type="button" class="btn bg-gradient-primary" data-bs-dismiss="modal">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section deleteScript{
    <script>

        var deleteId;

        function openModal(id) {
            deleteId = id;
            $('#exampleModal').modal('show'); // Open the modal
        }

        function deleteInvoice() {
            $.ajax({
                url: 'Invoicing/Delete',
                type: 'POST',
                data: { id: deleteId },
                success: function (response) {
                    $('#row_' + deleteId).remove();
                },
                error: function () {
                    alert("Oops! Something went wrong.");
                }
            });
        }
    </script>
}

