@model PatientManagementSoftware.Models.DoctorsViewModel
@{
    ViewBag.Title = "Doctor";
    ViewBag.Page = "Doctor";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">


    <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 mb-0 z-index-2">
            <div class="bg-gradient-primary shadow-primary border-radius-lg pt-3 pb-2">
                <h6 class="text-white text-capitalize ps-3"><b>Doctor Registration</b></h6>
            </div>
        </div>
        <div class="card-body mx-3 pt-3 p-2">
            @using (Html.BeginForm("SaveDoctor", "Doctor", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-lg-6 col-sm-12 mb-3">
                        <div class="input-group input-group-outline">
                            @Html.LabelFor(model => model.Name, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required", pattern = "[A-Za-z ]+" ,title = "Only letters and spaces allowed" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "form-text text-muted" })
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12 mb-3">
                        <div class="input-group input-group-outline">
                            @Html.LabelFor(model => model.Specialization, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Specialization, new { @class = "form-control", type = "text", pattern = "[A-Za-z ]+" ,title = "Only letters and spaces allowed" })
                            @Html.ValidationMessageFor(m => m.Specialization, "", new { @class = "form-text text-muted" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6 col-sm-12 mb-3">
                        <div class="input-group input-group-outline">
                            @Html.LabelFor(model => model.ContactNumber, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.ContactNumber, new { @class = "form-control", required = "required", pattern = "[0-9]+", title = "Only numeric values allowed" })
                            @Html.ValidationMessageFor(m => m.ContactNumber, "", new { @class = "form-text text-muted" })
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12 mb-3">
                        <div class="input-group input-group-outline is-filled">
                            @Html.LabelFor(model => model.Availability, new { @class = "form-label" })
                            @Html.DropDownListFor(model => model.Availability, new SelectList(new[]
                              {
                                     new SelectListItem{Text="Available", Value="Available" },
                                     new SelectListItem{Text="Un-Available", Value="Un-Available" },
                              }, "Value", "Text"), "--Choose Availability--", new { @class = "form-control", required = "required"})
                            @Html.ValidationMessageFor(m => m.Availability, "", new { @class = "form-text text-muted" })
                        </div>
                    </div>
                </div>

                <div class="text-center mb-2">
                    <button type="submit" class="btn btn-lg bg-gradient-primary btn-sm mb-0">Submit</button>
                </div>

            }

        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-3 pb-2">
                        <h6 class="text-white text-capitalize ps-3"><b>Doctors</b></h6>
                    </div>
                </div>
                <div class="card-body px-3 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0 p-2">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Doctor Id</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Specialization</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Contact Number</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Availability</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doctor in ViewBag.list)
                                {
                                    <tr id="row_@doctor.DoctorID">
                                        <td class="text-start text-secondary text-xs font-weight-bolder px-4 py-3">@doctor.DoctorID</td>
                                        <td class="text-start text-secondary text-xs font-weight-bolder px-4 py-3">@doctor.Name</td>
                                        <td class="text-start text-secondary text-xs font-weight-bolder px-4 py-3">@doctor.Specialization</td>
                                        <td class="text-start text-secondary text-xs font-weight-bolder px-4 py-3">@doctor.ContactNumber</td>
                                        <td class="text-start text-secondary text-xs font-weight-bolder px-4 py-3">@doctor.Availability</td>
                                        <td class="text-start px-4 py-3 mb-0">
                                            <a href="@Url.Action("Edit", "Doctor", new { id = doctor.DoctorID})" class="text-secondary font-weight-bold text-xs mx-2">Edit</a>
                                            <a href="#" class="text-secondary font-weight-bold text-xs mx-2" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="openModal(@doctor.DoctorID)">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title font-weight-normal" id="exampleModalLabel">Warning !!!!!!!</h5>
                    <button type="button" class="btn-close text-dark" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete the Doctor's' details ?...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
                    <button onclick="deleteDoctor()" type="button" class="btn bg-gradient-primary" data-bs-dismiss="modal">Save changes</button>
                </div>
            </div>
        </div>
    </div>


</div>


@section deleteScript{
    <script>

        var deleteId;

        function openModal(id) {
            deleteId = id;
            $('#exampleModal').modal('show'); // Open the modal
        }

        function deleteDoctor() {
            $.ajax({
                url: 'Doctor/Delete',
                type: 'POST',
                data: { id: deleteId },
                success: function (response) {
                    $('#row_' + deleteId).remove();
                },
                error: function () {
                    alert("Oops! Something went wrong.");
                }
            });
        }
    </script>
}
